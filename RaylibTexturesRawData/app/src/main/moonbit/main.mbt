///|
fn main {
  // Initialization
  let screen_width = 800
  let screen_height = 450
  let _ = @raylib.change_directory("examples/raylib_textures_raw_data")
  @raylib.init_window(
    screen_width, screen_height, "raylib [textures] example - texture from raw data",
  )

  // Load RAW image data (384x512, 32bit RGBA, no file header)
  let fudesumi_raw = @raylib.load_image_raw(
    "resources/fudesumi.raw",
    384,
    512,
    @raylib.PixelformatUncompressedR8g8b8a8,
    0,
  )
  let fudesumi = @raylib.load_texture_from_image(fudesumi_raw)
  @raylib.unload_image(fudesumi_raw)

  // Generate a checked texture by code using gen_image_checked
  let width = 960
  let height = 480
  let checked_im = @raylib.gen_image_checked(
    width, height, 32, 32, @raylib.orange, @raylib.gold,
  )
  let checked = @raylib.load_texture_from_image(checked_im)
  @raylib.unload_image(checked_im)

  @raylib.set_target_fps(60)

  // Main game loop
  while not(@raylib.window_should_close()) {
    // Draw
    @raylib.begin_drawing()
    @raylib.clear_background(@raylib.raywhite)
    @raylib.draw_texture(
      checked,
      screen_width / 2 - width / 2,
      screen_height / 2 - height / 2,
      @raylib.fade(@raylib.white, 0.5),
    )
    @raylib.draw_texture(fudesumi, 430, -30, @raylib.white)
    @raylib.draw_text("CHECKED TEXTURE ", 84, 85, 30, @raylib.brown)
    @raylib.draw_text("GENERATED by CODE", 72, 148, 30, @raylib.brown)
    @raylib.draw_text("and RAW IMAGE LOADING", 46, 210, 30, @raylib.brown)
    @raylib.draw_text(
      "(c) Fudesumi sprite by Eiden Marsal",
      310,
      screen_height - 20,
      10,
      @raylib.brown,
    )
    @raylib.end_drawing()
  }

  // De-Initialization
  @raylib.unload_texture(fudesumi)
  @raylib.unload_texture(checked)
  @raylib.close_window()
}
